<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <ImageButton
        android:id="@+id/backtosearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_back" />

    <EditText
        android:id="@+id/search"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/searchresult"
        android:background="@drawable/searchshape"
        android:drawablePadding="5dp"
        android:hint="검색어를 입력해주세요"
        android:paddingLeft="14.7dp"
        android:paddingRight="14.7dp"
        android:singleLine="true"
        android:textSize="16sp" />


    <View
        android:id="@+id/border"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search"
        android:layout_marginTop="11dp"
        android:background="#e5e5e5" />

    <TextView
        android:id="@+id/searchresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/border"
        android:layout_marginTop="11dp"
        android:textSize="12sp"
        android:textColor="@color/cBlack"
        android:text="검색결과" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerViewPlays"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchresult"
        android:layout_weight="1">



    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
