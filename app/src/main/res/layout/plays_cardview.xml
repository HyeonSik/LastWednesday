<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/RecyclerViewPlaysSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/plays_cardview_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/poster"
                android:layout_width="86.3dp"
                android:layout_height="123.7dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/play_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/poster"
                android:layout_marginLeft="113dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/poster"
                android:textSize="20sp"
                android:textColor="@color/cBlack"
                android:text="TextView" />

            <TextView
                android:id="@+id/play_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/play_title"
                android:layout_below="@+id/play_title"
                android:layout_marginTop="12.7dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/play_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/play_date"
                android:layout_below="@+id/play_date"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/poster"
                android:layout_marginBottom="3dp"
                android:layout_alignStart="@+id/play_place"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_wishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/poster"
                    android:layout_alignEnd="@+id/play_title"
                    android:layout_marginBottom="11dp"
                    android:background="#00ffffff"
                    android:drawableLeft="@drawable/ic_star_g"
                    android:drawablePadding="3dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="위시리스트"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/btn_seen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/poster"
                    android:layout_alignEnd="@+id/play_title"
                    android:layout_marginBottom="11dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#00ffffff"
                    android:drawableLeft="@drawable/ic_star_g"
                    android:drawablePadding="3dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="관람한 공연들"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/btn_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/poster"
                    android:layout_alignEnd="@+id/play_title"
                    android:layout_marginBottom="11dp"
                    android:layout_toRightOf="@id/btn_seen"
                    android:background="#00ffffff"
                    android:drawableLeft="@drawable/ic_star_g"
                    android:drawablePadding="3dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="별점매기기"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/btn_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/poster"
                    android:layout_alignEnd="@+id/play_title"
                    android:layout_marginBottom="11dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toRightOf="@id/btn_rate"
                    android:background="#00ffffff"
                    android:drawableLeft="@drawable/ic_star_g"
                    android:drawablePadding="3dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="코멘트달기"
                    android:textSize="9sp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>