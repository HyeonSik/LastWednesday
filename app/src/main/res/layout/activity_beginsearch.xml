<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">


    <EditText
        android:id="@+id/searchbar"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/searchshape"
        android:drawableLeft="@drawable/ic_search_skyblue"
        android:drawablePadding="5dp"
        android:focusable="false"
        android:clickable="true"
        android:hint="검색어를 입력해주세요"
        android:singleLine="true"
        android:paddingLeft="14.7dp"
        android:paddingRight="14.7dp"
        android:textSize="16sp" />


    <View
        android:id="@+id/border"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchbar"
        android:layout_marginTop="11dp"
        android:background="#e5e5e5" />

    <TextView
        android:id="@+id/searchresulttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/border"
        android:layout_marginTop="11dp"
        android:textSize="12sp"
        android:textColor="@color/cBlack"
        android:text="최근 검색한 작품" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerViewRecentPlays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchresulttext"
        android:layout_marginTop="17dp"
        android:layout_weight="1"
        android:scrollbars="horizontal">


    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
